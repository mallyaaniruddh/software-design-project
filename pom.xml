	<reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-pmd-plugin</artifactId>
                <version>3.26.0</version>
            </plugin>
        </plugins>
    </reporting>

	<build>
		<plugins>

			<!-- Spring Boot -->
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<version>3.3.5</version>
			</plugin>

      		<!--SonarQube-->
			<plugin>
				<groupId>org.sonarsource.scanner.maven</groupId>
				<artifactId>sonar-maven-plugin</artifactId>
				<version>5.0.0.4389</version>
			</plugin>

			<!-- PMD -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-pmd-plugin</artifactId>
				<version>3.26.0</version>
				<configuration>
					<failOnViolation>true</failOnViolation>
					<printFailingErrors>true</printFailingErrors>
				</configuration>
				<executions>
					<execution>
						<goals><goal>check</goal></goals>
					</execution>
				</executions>
      		</plugin>

			<!-- Git Changelog -->
			<plugin>
				<groupId>se.bjurr.gitchangelog</groupId>
				<artifactId>git-changelog-maven-plugin</artifactId>
				<version>2.2.0</version>
				<dependencies>
					<dependency>
						<groupId>org.openjdk.nashorn</groupId>
						<artifactId>nashorn-core</artifactId>
						<version>15.4</version>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<?m2e execute onConfiguration?>
						<id>generate-git-changelog</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>git-changelog</goal>
						</goals>
						<configuration>
							<javascriptHelper>
							<![CDATA[
							Handlebars.registerHelper('tagName', function(from) {
								if (from.length > 10 && from.substring(0, 10).equals("refs/tags/")) {
									return from.substring(10, from.length)
								}

								return from
							});

							Handlebars.registerHelper('tagUrl', function(from) {
								if (from.length > 10 && from.substring(0, 10).equals("refs/tags/")) {
									const baseTagName = from.substring(10, from.length)
									return "releases/tag/".concat(baseTagName)
								}

								return from
							});
							]]>
							</javascriptHelper>
							<templateFile>changelog-template.mustache</templateFile>
							<settingsFile>changelog.conf.json</settingsFile>
							<file>CHANGELOG.md</file>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- JaCoCo -->
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>0.8.12</version>
				<executions>
					<execution>
						<goals>
							<goal>prepare-agent</goal>
							<goal>report</goal>
						</goals>
						<configuration>
							<excludes>
								<exclude>**/VehicleRentalSystemApplication**</exclude>
								<exclude>**/jacoco/**</exclude>

								<!-- Fuel types -->
								<exclude>**/**Fuel**</exclude>
							</excludes>
            			</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>
