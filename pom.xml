			<groupId>net.sourceforge.pmd</groupId>
			<artifactId>pmd</artifactId>
			<version>7.7.0</version>
			<type>pom</type>
			<exclusions>
				<exclusion>
					<groupId>org.ow2.asm</groupId>
					<artifactId>asm</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<!-- JaCoCo: Java code coverage -->
		<dependency>
			<groupId>org.jacoco</groupId>
