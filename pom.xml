			<groupId>se.bjurr.gitchangelog</groupId>
			<artifactId>git-changelog-lib</artifactId>
			<version>2.4.1</version>
		</dependency>

		<!-- Spring Boot -->
		<dependency>
		    <groupId>org.springframework.boot</groupId>
		    <artifactId>spring-boot-starter-thymeleaf</artifactId>
